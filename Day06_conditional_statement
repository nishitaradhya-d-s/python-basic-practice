#given number is divisible by 5 or not
num=int(input("enter a number: "))
if(num%5==0):
    print(num, "is divisible by 5")
else:
    print(num, "is not divisible by 5")

#to check whether the given number is positive,negative or zero
n=int(input("enter a number: "))
if(n<0):
    print(n, "is negative number")
elif(n>0):
    print(n, " is positive number")
else:
    print("The given is a zero")

#takes single character and checking whether it is a ovel or not 
char=input("enter a character: ")
len(char)==1
if(char==['a','e','i','o','u']):
    print(char, " is a ovel")
else:
    print(char, "is not a ovel")
